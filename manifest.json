{
    "name": "Octotips",
    "version": "1.0.0",
    "description": "Tooltips extension for GitHub",
    "permissions": ["tabs", "http://*/*", "identity", "*://www.github.com/*", "windows", "storage"],
    "content_scripts": [{
        "matches": ["*://github.com/", "*://github.com/**/*", "*://github.com/*"],
        "js": ["extension.js"],
        "css": ["styles.css"]
    }],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "manifest_version": 2
}
